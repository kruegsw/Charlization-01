<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
  <%- include('../partials/header'); %>
</header>

<main>
  <div class="jumbotron">
    <h1>My Games</h1>
    <ul>
      <!-- bulleted list of links to users games -->
      <% games.forEach(function(game) { %>
        <li>
          <strong><a href=<%= `games/${game._id}` %>><%= game.gameName %></a></strong>
        </li>
      <% }); %>
    </ul>
  </div>
  <a href="/games/new">Create New Game</a>
</main>

<footer>
  <%- include('../partials/footer'); %>
</footer>

</body>
</html>